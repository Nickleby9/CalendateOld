<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frgLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.calendate.calendate.ButtonsFragment"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/btnTopLeft"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:drawableTop="@drawable/cellphone"
        android:paddingTop="23sp"
        android:text="Text"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintRight_toLeftOf="@+id/btnTopRight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTopRight"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:drawableTop="@drawable/cellphone"
        android:paddingTop="23sp"
        android:text="Text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnTopLeft"
        app:layout_constraintTop_toTopOf="@+id/btnTopLeft"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/btnMiddleLeft"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:drawableTop="@drawable/cellphone"
        android:paddingTop="23sp"
        android:text="Text"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnTopLeft"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnTopLeft" />

    <Button
        android:id="@+id/btnMiddleRight"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:drawableTop="@drawable/cellphone"
        android:paddingTop="23sp"
        android:text="Text"
        app:layout_constraintTop_toTopOf="@+id/btnMiddleLeft"
        app:layout_constraintRight_toRightOf="@+id/btnTopRight" />

    <Button
        android:id="@+id/btnBottomLeft"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:drawableTop="@drawable/cellphone"
        android:paddingTop="23sp"
        android:text="Text"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMiddleLeft"
        app:layout_constraintLeft_toLeftOf="@+id/btnMiddleLeft" />

    <Button
        android:id="@+id/btnBottomRight"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:drawableTop="@drawable/cellphone"
        android:paddingTop="23sp"
        android:text="Text"
        app:layout_constraintTop_toTopOf="@+id/btnBottomLeft"
        app:layout_constraintRight_toRightOf="@+id/btnMiddleRight" />

</android.support.constraint.ConstraintLayout>
