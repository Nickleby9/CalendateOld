<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frgLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.calendate.calendate.ButtonsFragment" >

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btnTopLeft"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:drawableTop="@drawable/cellphone"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintRight_toLeftOf="@+id/divTop"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCorners="true"
        android:layout_marginRight="8dp"
        android:textStyle="bold" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btnTopRight"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:drawableTop="@drawable/cellphone"
        app:layout_constraintLeft_toRightOf="@+id/divTop"
        app:layout_constraintTop_toTopOf="@+id/btnTopLeft"
        app:roundedCorners="true"
        android:layout_marginLeft="8dp"
        android:textStyle="bold" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btnMiddleLeft"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_marginTop="0dp"
        android:drawableTop="@drawable/cellphone"
        app:layout_constraintLeft_toLeftOf="@+id/btnTopLeft"
        app:layout_constraintTop_toBottomOf="@+id/divTopLeft"
        app:roundedCorners="true"
        app:layout_constraintRight_toLeftOf="@+id/divMiddle"
        android:layout_marginRight="8dp"
        android:textStyle="bold" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btnMiddleRight"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:drawableTop="@drawable/cellphone"
        app:layout_constraintRight_toRightOf="@+id/btnTopRight"
        app:roundedCorners="true"
        app:layout_constraintTop_toBottomOf="@+id/tivTopRight"
        app:layout_constraintLeft_toRightOf="@+id/divMiddle"
        android:layout_marginLeft="8dp"
        android:textStyle="bold" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btnBottomLeft"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:drawableTop="@drawable/cellphone"
        app:layout_constraintLeft_toLeftOf="@+id/btnMiddleLeft"
        app:layout_constraintRight_toLeftOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/divBottomLeft"
        app:roundedCorners="true"
        android:textStyle="bold" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btnBottomRight"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:drawableTop="@drawable/cellphone"
        app:layout_constraintRight_toRightOf="@+id/btnMiddleRight"
        app:roundedCorners="true"
        app:layout_constraintTop_toBottomOf="@+id/divBottomRight"
        app:layout_constraintLeft_toRightOf="@+id/imageView9"
        android:layout_marginLeft="8dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/divBottomRight"
        android:layout_width="0dp"
        android:layout_height="13dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnMiddleRight"
        app:layout_constraintRight_toRightOf="@+id/btnMiddleRight"
        app:layout_constraintTop_toBottomOf="@+id/btnMiddleRight"
        app:srcCompat="@drawable/divider" />

    <ImageView
        android:id="@+id/tivTopRight"
        android:layout_width="0dp"
        android:layout_height="13dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnTopRight"
        app:layout_constraintRight_toRightOf="@+id/btnTopRight"
        app:layout_constraintTop_toBottomOf="@+id/btnTopRight"
        app:srcCompat="@drawable/divider" />

    <ImageView
        android:id="@+id/divTopLeft"
        android:layout_width="0dp"
        android:layout_height="13dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnTopLeft"
        app:layout_constraintRight_toRightOf="@+id/btnTopLeft"
        app:layout_constraintTop_toBottomOf="@+id/btnTopLeft"
        app:srcCompat="@drawable/divider" />

    <ImageView
        android:id="@+id/divBottomLeft"
        android:layout_width="0dp"
        android:layout_height="13dp"
        app:srcCompat="@drawable/divider"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnMiddleLeft"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/btnMiddleLeft"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMiddleLeft"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/divTop"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:srcCompat="@drawable/dividervertical"
        app:layout_constraintTop_toTopOf="@+id/btnTopRight"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tivTopRight"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/divMiddle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toTopOf="@+id/divBottomRight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/dividervertical"
        app:layout_constraintTop_toBottomOf="@+id/tivTopRight" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divBottomRight"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/dividervertical"
        app:layout_constraintBottom_toBottomOf="@+id/btnBottomRight" />

</android.support.constraint.ConstraintLayout>
