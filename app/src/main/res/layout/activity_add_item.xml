<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.calendate.calendate.AddItem"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/tvHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/add_item_create_a_new_event"
        android:textColor="#000"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/add_item_title"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeadline" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/add_item_description"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/etTitle" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/add_item_event_date"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/tvDescription"
        app:layout_constraintTop_toBottomOf="@+id/etDescription" />

    <TextView
        android:id="@+id/tvAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/add_item_alert_ahead"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/tvDate"
        app:layout_constraintTop_toBottomOf="@+id/btnDate" />

    <TextView
        android:id="@+id/tvRepeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/add_item_repeat"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/tvAlert"
        app:layout_constraintTop_toBottomOf="@+id/spnCount" />

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvTitle"
        app:layout_constraintLeft_toLeftOf="@+id/etDescription"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvDescription"
        app:layout_constraintLeft_toRightOf="@+id/tvDescription"
        app:layout_constraintRight_toRightOf="@+id/etTitle" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btnDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/add_item_pick_a_date"
        app:bootstrapSize="lg"
        app:bootstrapBrand="regular"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvDate"
        app:layout_constraintLeft_toLeftOf="@+id/etDescription"
        app:layout_constraintRight_toRightOf="@+id/etDescription"/>

    <Spinner
        android:id="@+id/spnCount"
        android:layout_width="0dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvAlert"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintRight_toLeftOf="@+id/spnKind"
        app:layout_constraintTop_toTopOf="@+id/tvAlert"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnDate" />

    <Spinner
        android:id="@+id/spnKind"
        android:layout_width="0dp"
        android:layout_height="45dp"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintLeft_toRightOf="@+id/spnCount"
        app:layout_constraintRight_toRightOf="@+id/btnDate"
        app:layout_constraintTop_toTopOf="@+id/spnCount" />

    <Spinner
        android:id="@+id/spnRepeat"
        android:layout_width="0dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvRepeat"
        app:layout_constraintLeft_toLeftOf="@+id/spnCount"
        app:layout_constraintRight_toRightOf="@+id/spnKind"
        app:layout_constraintTop_toTopOf="@+id/tvRepeat" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/add_item_save"
        app:bootstrapSize="lg"
        app:bootstrapBrand="regular"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/spnRepeat"
        app:layout_constraintLeft_toLeftOf="@+id/tvRepeat" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btnClear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/add_item_clear"
        app:bootstrapSize="lg"
        app:bootstrapBrand="regular"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/spnRepeat"
        app:layout_constraintRight_toRightOf="@+id/spnRepeat" />

</android.support.constraint.ConstraintLayout>
